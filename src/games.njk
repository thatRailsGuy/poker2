---
layout: layout.njk
title: Games
pagination:
  data: games
  size: 100
permalink: /games/
---

<h1>Poker Games</h1>

<div class="row mb-3">
  <div class="col-md-12">
    <div class="btn-group" role="group">
      <a href="/games/" class="btn btn-outline-secondary">Show All</a>
    </div>
  </div>
</div>

{% if games %}
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Min Players</th>
      <th>Max Players</th>
      <th>Number of Cards</th>
      <th>Tags</th>
    </tr>
  </thead>
  <tbody>
    {% for game in games | sortBy('name') %}
    <tr>
      <td><a href="/games/{{ game.id }}/">{{ game.name }}</a></td>
      <td>{{ styles | getStyleById(game.style_id) }}</td>
      <td>{{ game.min_players }}</td>
      <td>{{ game.max_players }}</td>
      <td>{{ game.num_cards }}</td>
      <td>
        {% if game.tags %}
          {% for tag in game.tags %}
            {{ tag | clickableTag | safe }}
          {% endfor %}
        {% endif %}
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% else %}
<p>No games found.</p>
{% endif %}

<div class="mt-3">
  <a href="/" class="btn btn-secondary">Back to Home</a>
</div>
