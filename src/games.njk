---
layout: layout.njk
title: Games
pagination:
  data: games
  size: 100
permalink: /games/
---

<h1>Poker Games</h1>

<div class="row mb-3">
  <div class="col-md-6">
    <input type="text" id="game-search" class="form-control" placeholder="Search games by name, description, or tags...">
  </div>
  <div class="col-md-6">
    <div class="btn-group" role="group">
      <a href="{{ '/games/' | url }}" class="btn btn-outline-secondary">Show All</a>
    </div>
  </div>
</div>

<div id="search-results" class="alert alert-info d-none mb-3"></div>

{% if games %}
<table class="table table-striped" id="games-table">
  <thead>
    <tr>
      <th class="sortable" data-column="0">Name <span class="sort-indicator"></span></th>
      <th class="sortable" data-column="1">Style <span class="sort-indicator"></span></th>
      <th class="sortable" data-column="2">Min Players <span class="sort-indicator"></span></th>
      <th class="sortable" data-column="3">Max Players <span class="sort-indicator"></span></th>
      <th class="sortable" data-column="4">Number of Cards <span class="sort-indicator"></span></th>
      <th>Tags</th>
    </tr>
  </thead>
  <tbody>
    {% for game in games | sortBy('name') %}
    <tr>
      <td><a href="{{ ('/games/' + game.id + '/') | url }}">{{ game.name }}</a></td>
      <td>{{ styles | getStyleById(game.style_id) }}</td>
      <td>{{ game.min_players }}</td>
      <td>{{ game.max_players }}</td>
      <td>{{ game.num_cards }}</td>
      <td>
        {% if game.tags %}
          {% for tag in game.tags %}
            {{ tag | clickableTag | safe }}
          {% endfor %}
        {% endif %}
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% else %}
<p>No games found.</p>
{% endif %}

<div class="mt-3">
  <a href="{{ '/' | url }}" class="btn btn-secondary">Back to Home</a>
</div>
