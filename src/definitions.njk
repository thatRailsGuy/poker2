<h1>Poker Term Definitions</h1>

<p class="lead">Common poker terminology organized by category.</p>

{% set categories = [] %}
{% for definition in definitions %}
  {% if definition.category not in categories %}
    {% set categories = (categories.push(definition.category), categories) %}
  {% endif %}
{% endfor %}

{% for category in categories %}
<h2 class="mt-4">{{ category }}</h2>
<table class="table table-striped">
  <tbody>
    {% for definition in definitions | sortBy('word') %}
      {% if definition.category == category %}
      <tr>
        <td width="20%"><strong>{{ definition.word }}</strong></td>
        <td>{{ definition.definition }}</td>
      </tr>
      {% endif %}
    {% endfor %}
  </tbody>
</table>
{% endfor %}
