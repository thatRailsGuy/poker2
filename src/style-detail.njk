---
layout: layout.njk
pagination:
  data: styles
  size: 1
  alias: style
permalink: /styles/{{ style.id }}/
---

<h1>{{ style.name }}</h1>

<p><strong>Description:</strong></p>
<p>{{ style.description }}</p>

<h3>Games in this style:</h3>
<ul class="list-group">
  {% for game in games %}
    {% if game.style_id == style.id %}
    <li class="list-group-item">
      <a href="{{ ('/games/' + game.id + '/') | url }}">{{ game.name }}</a>
    </li>
    {% endif %}
  {% endfor %}
</ul>

<div class="mt-3">
  <a href="{{ '/styles/' | url }}" class="btn btn-secondary">Back to Styles</a>
</div>
